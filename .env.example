# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# LinkedIn Credentials (for automation)
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_password
LINKEDIN_PHONE=your_phone_number

# OpenAI API (backup/alternative)
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Database Configuration
DATABASE_URL=sqlite:///job_applications.db

# Application Settings
MAX_APPLICATIONS_PER_DAY=50
DELAY_BETWEEN_APPLICATIONS=30
ENABLE_NOTIFICATIONS=true
DEBUG_MODE=false

# Browser Settings
HEADLESS_MODE=false
BROWSER_PROFILE_PATH=./browser_profiles
ENABLE_STEALTH_MODE=true

# Job Search Preferences
DEFAULT_LOCATION=Remote
DEFAULT_EXPERIENCE_LEVEL=Mid-Level
DEFAULT_JOB_TYPES=Full-time,Contract
