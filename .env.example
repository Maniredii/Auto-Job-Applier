# Smart Auto Job Applier Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# API KEYS (Required)
# =============================================================================

# Groq API Key (Required for AI features)
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API Key (Optional alternative to Groq)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# PLATFORM CREDENTIALS (Optional - for automated login and application)
# =============================================================================

# LinkedIn Credentials
LINKEDIN_EMAIL=your_linkedin_email@example.com
LINKEDIN_PASSWORD=your_linkedin_password
LINKEDIN_PHONE=your_phone_number

# Indeed Credentials
INDEED_EMAIL=your_indeed_email@example.com
INDEED_PASSWORD=your_indeed_password

# Glassdoor Credentials
GLASSDOOR_EMAIL=your_glassdoor_email@example.com
GLASSDOOR_PASSWORD=your_glassdoor_password

# Naukri Credentials
NAUKRI_EMAIL=your_naukri_email@example.com
NAUKRI_PASSWORD=your_naukri_password

# Internshala Credentials
INTERNSHALA_EMAIL=your_internshala_email@example.com
INTERNSHALA_PASSWORD=your_internshala_password

# Unstop Credentials
UNSTOP_EMAIL=your_unstop_email@example.com
UNSTOP_PASSWORD=your_unstop_password

# AngelList/Wellfound Credentials
ANGELLIST_EMAIL=your_angellist_email@example.com
ANGELLIST_PASSWORD=your_angellist_password

# Dice Credentials
DICE_EMAIL=your_dice_email@example.com
DICE_PASSWORD=your_dice_password

# Monster Credentials
MONSTER_EMAIL=your_monster_email@example.com
MONSTER_PASSWORD=your_monster_password

# ZipRecruiter Credentials
ZIPRECRUITER_EMAIL=your_ziprecruiter_email@example.com
ZIPRECRUITER_PASSWORD=your_ziprecruiter_password

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Database Configuration
DATABASE_URL=sqlite:///job_applications.db

# Application Settings
MAX_APPLICATIONS_PER_DAY=50
DELAY_BETWEEN_APPLICATIONS=30
ENABLE_NOTIFICATIONS=true
DEBUG_MODE=false

# Browser Settings
HEADLESS_MODE=false
BROWSER_PROFILE_PATH=./browser_profiles
ENABLE_STEALTH_MODE=true

# Job Search Preferences
DEFAULT_LOCATION=Remote
DEFAULT_EXPERIENCE_LEVEL=Mid-Level
DEFAULT_JOB_TYPES=Full-time,Contract
DEFAULT_PLATFORMS=linkedin,indeed,glassdoor

# =============================================================================
# PLATFORM ENABLE/DISABLE
# =============================================================================

# Enable/disable specific platforms
ENABLE_LINKEDIN=true
ENABLE_INDEED=true
ENABLE_GLASSDOOR=true
ENABLE_NAUKRI=false
ENABLE_INTERNSHALA=false
ENABLE_UNSTOP=false
ENABLE_ANGELLIST=false
ENABLE_DICE=false
ENABLE_MONSTER=false
ENABLE_ZIPRECRUITER=false

# =============================================================================
# RATE LIMITING (Requests per minute per platform)
# =============================================================================

LINKEDIN_RATE_LIMIT=10
INDEED_RATE_LIMIT=15
GLASSDOOR_RATE_LIMIT=12
NAUKRI_RATE_LIMIT=20
INTERNSHALA_RATE_LIMIT=15
UNSTOP_RATE_LIMIT=10
ANGELLIST_RATE_LIMIT=8
DICE_RATE_LIMIT=12
MONSTER_RATE_LIMIT=15
ZIPRECRUITER_RATE_LIMIT=10

# =============================================================================
# AI MODEL SETTINGS
# =============================================================================

# Groq model configuration
GROQ_MODEL=mixtral-8x7b-32768
MAX_TOKENS=4000
TEMPERATURE=0.7
